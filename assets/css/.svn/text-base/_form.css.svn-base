.full{width: 100%;}

/* --- Form --- */
input,textarea,select{font-family:inherit;font-size:inherit;font-weight:inherit;*font-size:100%}
form{}
fieldset{border:none;} 
legend{}

.formBlock{}

.formField{margin-bottom:18px; }
.mediumFields .formField{margin-bottom:12px; }
.minFields .formField{margin-bottom:4px; }
.formField > label{display:block; font-family: 'open_sansregular'; font-size: 16px; color:#4b5160; line-height: 43px;}
.rightLabels .formField > label{text-align: right;}
.formField > label.required:after{content:'*';}
.formField > label.suf:after{content:':';}
.formField > label + .formControl{font-size: 18px; color: #5570ae; line-height: 43px;}
.actionsRow{ padding: 5px 0; margin-top: 20px;}
.marginTop{margin-top: 60px;}

/* horizontalForm */
.horizontalForm .formField {/* overflow: hidden; */}
.formField:before,.formField:after {content:" ";display: table;}.formField:after {clear: both;}

.horizontalForm .formField > label, .formField.horizontalForm  > label{float:left; width:140px; }
.horizontalForm .formField > label + .formControl, .formField.horizontalForm  > label + .formControl{margin-left:140px; padding-left:8px; }

/* horizontalForm RTL */
.rtl{ direction:rtl; text-align:right; } /* DEMO */
.rtl .horizontalForm .formField > label, .formField.horizontalForm  > label{float:right;  }
.rtl .horizontalForm .formField > label + .formControl, .formField.horizontalForm  > label + .formControl{margin-left:0; margin-right:160px; }

.smallLabel .formField > label, .formField.smallLabel > label{width:80px;}
.smallLabel .formField > label + .formControl ,.formField.smallLabel > label + .formControl{margin-left: 80px;}

.mediumLabel .formField > label, .formField.mediumLabel > label{width:120px;}
.mediumLabel .formField > label + .formControl ,.formField.mediumLabel > label + .formControl{margin-left:120px;}

.largeLabel .formField > label, .formField.largeLabel > label{width:170px;}
.largeLabel .formField > label + .formControl, .formField.largeLabel > label + .formControl{margin-left:170px;}

/* Form Control */
.mainControl,
.formControl input[type=text],.formControl input[type=email], .formControl input[type=password], .formControl input[type=tel], .formControl input[type="search"],
.formControl textarea{font-family: 'open_sansregular'; font-size: 16px; color:#5570ae; border: 1px solid #5571ae;border-radius: 1px; padding: 6px 8px 8px; box-shadow:0 0; width:100%; box-sizing:border-box; -webkit-box-sizing: border-box; -moz-box-sizing: border-box;}

.formControl .mainControl[readonly], .formControl input[readonly], .formControl textarea[readonly]{ border: none; padding: 0; color: #5570ae;}

.formControlSelect{  margin-bottom: 15px;} /* ## */
.formField textarea { resize:none; } /* Redimensionnement : none|horizontal|vertical|both|inherit */
.formField textarea.noResize { resize:none; } /* désactive le redimensionnement */
select{ font-family: 'open_sansregular'; font-size: 16px; background-color: #5873b1; border: 1px solid #5873b1; border-radius: 2px; color:#FFF; padding: 2px; width:140px; height: 36px;}
select{text-indent: 0.01px; text-overflow: ""; -moz-appearance:none;appearance:none; padding-right: 32px; width:40%; box-sizing:border-box; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; background: url("../images/icons/select.png") no-repeat 98% center #5873b1; /*background-image:url("data:image/png;base64,R0lGODlhDwAUAIABAAAAAP///yH5BAEAAAEALAAAAAAPABQAAAIXjI+py+0Po5wH2HsXzmw//lHiSJZmUAAAOw=="); */}
.rtl select{background-position:3% center;}


/* MS hacks */
select::-ms-expand {display: none;}

.borderless .formControl .mainControl, .borderless .formControl input,.borderless .formControl textarea, .borderless .formControl select, .borderless{/* border:none!important; */}
.isValid { background: url("../images/icons/green_tick.png") no-repeat scroll 98% center; box-shadow:0 0; padding-right: 39px !important;}
.isInvalid {background: url("../images/icons/red_tick.png") no-repeat scroll 98% center; box-shadow:0 0; border-color: #fd7a7a!important; padding-right: 39px !important;}

/* placeholder style */
::-webkit-input-placeholder 	{ color:#4b5160;}
:-moz-placeholder 				{ color:#4b5160; opacity:  1; /* Mozilla Firefox 4 to 18 */ }
::-moz-placeholder 				{ color:#4b5160; opacity:  1; /* Mozilla Firefox 19+ */}
:-ms-input-placeholder 			{ color:#4b5160; /* Internet Explorer 10+ */}

/* Options */
.inlineOptions{overflow:hidden;padding:2px 0;}
.inlineOptions .optionItem{float: left;}
.inlineOptions label{float: left;width: auto;margin: 0 10px 0 0;line-height: 22px;}
.inlineOptions input{float:left;}

.rtl .inlineOptions{ float:right; }
.rtl .inlineOptions label{float: right;margin: 0 4px 0 10px;}
.rtl .inlineOptions input{float:right;}

.blockOptions{overflow:hidden;}
.blockOptions .optionItem{margin: 0px 0 12px; }
.blockOptions label{float: none; display:block; width: auto;margin: 0 10px 0 0px; line-height: 24px;}
.blockOptions input{float:left;}
.blockOptions input[type="checkbox"]:checked  + label{ }

.rtl .blockOptions{ float:right; }
.rtl .blockOptions input{float:right;}
.rtl .blockOptions label{margin: 0 0 0 10px;}

.infoTxt{font-family: 'open_sansregular'; font-size: 16px; color:#b5b5b5;}
/* message Box */
.messageBox{font-family: 'open_sanssemibold'; font-size:15px; line-height:16px; color:#b5b5b5; }
.messageBox.error{color:#fd7a7a;}
.messageBox.warning{color:#e79e7e;}
.messageBox.success{color:#33a263;}

.absoluteMsg .formControl{position: relative;}
.absoluteMsg .messageBox{position: absolute;top: 0;right: -190px;width: 180px;line-height: 20px;}

/* Buttons */
.btn{background-color: #5571ae; border:none; cursor: pointer; line-height:40px; min-height: 40px; color:#FFF;font-family: 'open_sanssemibold'; font-size: 16px; padding:0 24px; min-width: 100px; max-width:100%; -webkit-border-radius: 0; -webkit-appearance: none; -moz-appearance: none; -ms-appearance: none; -o-appearance: none; appearance: none;}
.btn:hover{background-color:#223765;}
.btnSecond{border:1px solid #AFAFAF;line-height:17px;color:#FFF;border-radius: 5px;font-family: 'OpenSansSemibold';font-size: 10px;text-transform: uppercase;padding:0 2px;}
.btn.short{line-height: 24px;}

.btn.small{min-width: 80px;}
.btn.medium{min-width: 141px;}
.btn.large{min-width: 250px;}
.btn.full{min-width: 100%; padding: 0 16px;}

/* custom Radio & checkbox */
.customRadio input[type=radio], .customCheckbox  input[type=checkbox] {display: none;}
.customRadio label, .customCheckbox label{position:relative; padding-left: 37px!important;color: #4b5160;font-size: 14px;font-family: open_sansitalic;} 
.customRadio label:before, .customCheckbox label:before {content: "";text-align: center;display: inline-block;width: 22px;height: 24px;padding-right: 7px;background-image: url(../images/icons/check.png);position:absolute; left:0; top: 0;background-position: 0px 25px;}
.customRadio label:before {border-radius: 8px;}
.customCheckbox label:before {border-radius: 0px;}
.customRadio  input[type=radio]:checked + label {}
.customCheckbox input[type=checkbox]:checked + label{}
.customRadio  input[type=radio]:checked + label:before {content: "\2022";color: #f3f3f3;font-size: 16px; line-height: 11px;}
.customCheckbox input[type=checkbox]:checked + label:before {content: "";background-position: 0px 0px;}



/* TABLET */ 
@media only screen and (max-width : 1024px) { 
	.btn{font-size: 15px; padding:0 18px; }
}

/* TABLET PORTRAIT portrait  */
@media only screen and (max-width : 768px) and (orientation : portrait) , screen and (max-width : 640px) {
	.footerBar { font-size: 10px; }
	.formField{margin-bottom:14px; }
	.formField > label{font-size: 12px; line-height: 32px;}
	.formField > label + .formControl{font-size: 15px; line-height: 26px;}
	.formControl .mainControl,.formControl input[type=text] ,.formControl input[type=email], .formControl input[type=tel], .formControl input[type=password], .formControl textarea{ font-size: 14px; padding: 6px;}
	.borderless .formControl .mainControl, .borderless .formControl input,.borderless .formControl textarea, .borderless .formControl select{ border: 1px solid #5571ae!important;}
	.absoluteMsg .messageBox{position: static; width: auto;}
	.messageBox{font-size:12px;}
	.btn {width: 100%; box-sizing: border-box; font-size: 16px; line-height: 46px; padding:0 16px;}
	.infoTxt{font-size: 12px;}
}

